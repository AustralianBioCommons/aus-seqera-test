
params.input = "https://github.com/AustralianBioCommons/aus-seqera-test/raw/refs/heads/main/data/samplesheet.csv"

process {
    memory = 250.MB
    cpus = 1
    time = 2.h
    executor = 'local'
    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: "copy"
    ]
}

profiles {
    conda {
        conda.enabled          = true
        docker.enabled         = false
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
    }
    docker {
        docker.enabled         = true
        docker.userEmulation   = true
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
    }
    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
        docker.enabled         = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
    }
    gadi {
        singularity.enabled    = true
        process {
            executor = 'pbspro'
            beforeScript = "module load singularity"
            queue = 'normal'
            storage = "scratch/ad78+gdata/ad78"
        }
    }

    aws { 
        docker.enabled         = true
    }

    setonix {
        singularity.enabled    = true
        process {
            executor = 'slurm'
            beforeScript = "source /software/projects/pawsey1085/seqera-apps/nft_initiate_compute_env.sh"
            queue = 'work'
        }
    }
}
